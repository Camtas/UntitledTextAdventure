{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "screens",
    "state",
    "rooms"
  ],
  "properties": {
    "screens": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "body",
          "extraText",
          "buttons"
        ],
        "properties": {
          "body": {
            "type": "string"
          },
          "extraText": {
            "type": "string"
          },
          "customScreenCode": {
            "type": "integer"
          },
          "buttons": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "title",
                "outcome"
              ],
              "properties": {
                "title": {
                  "type": "string"
                },
                "outcome": {
                  "type": "integer"
                },
                "newScreen": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "state": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "screenID",
          "stateID",
          "size",
          "default"
        ],
        "properties": {
          "screenID": {
            "type": "integer"
          },
          "stateID": {
            "type": "integer"
          },
          "size": {
            "type": "integer"
          },
          "default": {
            "type": "integer"
          }
        }
      }
    },
    "rooms": {
      "type": "object",
       "additionalProperties": false,
       "required": [
         "floorSize",
         "rooms"
       ],
      "properties": {
        "floorSize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 255
        },
        "rooms": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "position"
            ],
            "properties": {
              "type": {
                "type": "integer"
              },
              "position": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "exclusiveMaximum": 255
                },
                "minItems": 2,
                "maxItems": 2
              }
            }
          }
        }
      }
    }
  }
}
